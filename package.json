{
    "name": "replacerules",
    "displayName": "Replace Rules",
    "description": "Create search/replace rules using Javascript regular expressions",
    "version": "0.1.2",
    "publisher": "bhughes339",
    "engines": {
        "vscode": "^1.16.0"
    },
    "repository": {
        "type": "git",
        "url": "https://github.com/bhughes339/vscode-replacerules.git"
    },
    "categories": [
        "Other"
    ],
    "keywords": [
        "regex",
        "regular expressions",
        "replace"
    ],
    "activationEvents": [
        "onCommand:extension.chooseRule"
    ],
    "main": "./out/extension",
    "contributes": {
        "commands": [
            {
                "command": "extension.chooseRule",
                "title": "Run Rule...",
                "category": "Replace Rules"
            }
        ],
        "keybindings": [
            {
                "command": "extension.chooseRule",
                "key": "ctrl+alt+r",
                "mac": "cmd+alt+r",
                "when": "editorTextFocus"
            }
        ],
        "configuration": {
            "type": "object",
            "title": "Replace Rules",
            "properties": {
                "replacerules.rules": {
                    "type": "object",
                    "description": "Dictionary of rulesets for Replace Rules",
                    "default": {
                        "rules": [
                            {
                                "name": "Remove trailing and leading whitespace",
                                "find": [
                                    "^[ \\t]+",
                                    "[ \\t]+$"
                                ],
                                "replace": ""
                            }
                        ]
                    }
                }
            }
        }
    },
    "scripts": {
        "vscode:prepublish": "npm run compile",
        "compile": "node ./node_modules/typescript/bin/tsc -p ./",
        "watch": "node ./node_modules/typescript/bin/tsc -watch -p ./",
        "postinstall": "node ./node_modules/vscode/bin/install",
        "test": "npm run compile && node ./node_modules/vscode/bin/test"
    },
    "devDependencies": {
        "typescript": "^2.5.2",
        "vscode": "^1.1.5",
        "mocha": "^3.5.0",
        "@types/node": "^7.0.43",
        "@types/mocha": "^2.2.42"
    }
}
